<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shreco.Views.QrScanButtonView">
    <ContentView.Content>
        <Frame Padding="6"
               CornerRadius="30"
               HorizontalOptions="End"
               VerticalOptions="End"
               Margin="10">
            <ImageButton Source="qr"
                         BackgroundColor="Transparent"
                         Margin="5"
                         HeightRequest="40"
                         Clicked="OpenScanner_Clicked" />
        </Frame>
    </ContentView.Content>
</ContentView>